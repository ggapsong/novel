/**index.wxss**/
.container{
  white-space: 750rpx;
  padding-bottom: 10px;
}
.title{
  display: block;
  font:14px/30px "微软雅黑";
  text-align: left;
  color:#909399;
  padding: 10px 0 10px 10px;
}
.list{
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #EBEEF5;
}
.item{
  width: 33.333%;
  box-sizing: border-box;
  padding: 10px;
  background-color:#faf8f9;
  text-align: center;
  border: 1px solid #EBEEF5;
  border-left: none;
  border-top: none;
}
.item:nth-of-type(3n){
  border-right: none;
}
.classify{
  font:16px/20px "微软雅黑";
  color:#303133;
}
.num{
   font:12px/20px "微软雅黑";
   color: #C0C4CC;
}
.item image{
  width:100%;
}
